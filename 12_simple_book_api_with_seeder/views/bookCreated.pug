doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title New Book Added Notification
    style.
      body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        line-height: 1.6;
        color: #333;
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f4f4f4;
      }
      .container {
        background-color: #ffffff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
      }
      .header {
        text-align: center;
        border-bottom: 3px solid #007bff;
        padding-bottom: 20px;
        margin-bottom: 30px;
      }
      .header h1 {
        color: #007bff;
        margin: 0;
        font-size: 28px;
      }
      .book-icon {
        font-size: 48px;
        color: #007bff;
        margin-bottom: 10px;
      }
      .content {
        margin-bottom: 30px;
      }
      .book-details {
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 8px;
        border-left: 4px solid #007bff;
        margin: 20px 0;
      }
      .book-details h3 {
        color: #007bff;
        margin-top: 0;
        margin-bottom: 15px;
      }
      .detail-item {
        margin-bottom: 10px;
        padding: 8px 0;
        border-bottom: 1px solid #e9ecef;
      }
      .detail-item:last-child {
        border-bottom: none;
      }
      .detail-label {
        font-weight: bold;
        color: #495057;
        display: inline-block;
        width: 80px;
      }
      .detail-value {
        color: #212529;
      }
      .confirmation {
        background-color: #d4edda;
        color: #155724;
        padding: 15px;
        border-radius: 5px;
        border: 1px solid #c3e6cb;
        margin: 20px 0;
        text-align: center;
        font-weight: 500;
      }
      .footer {
        text-align: center;
        padding-top: 20px;
        border-top: 1px solid #dee2e6;
        color: #6c757d;
        font-size: 14px;
      }
      .signature {
        margin-top: 20px;
        padding: 15px;
        background-color: #f8f9fa;
        border-radius: 5px;
      }
      .signature h4 {
        color: #007bff;
        margin: 0 0 10px 0;
      }
      .signature p {
        margin: 5px 0;
        color: #495057;
      }
      @media (max-width: 600px) {
        body {
          padding: 10px;
        }
        .container {
          padding: 20px;
        }
        .header h1 {
          font-size: 24px;
        }
      }

